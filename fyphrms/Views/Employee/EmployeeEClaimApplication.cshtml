@model fyphrms.Models.Employees.EClaimApplicationViewModel

@{
    ViewData["Title"] = "E-Claim Application";
    Layout = "_Layout";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark">E Claim</h2>
        <span class="text-secondary">@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</span>
    </div>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="EmployeeEClaimHistory" class="btn btn-info text-white shadow-sm">Claim History</a>
    </div>

    
    <div class="card shadow-sm p-4">
        <div class="card-body">
            <h4 class="mb-4 text-secondary">E-Claim Application</h4>

            <form asp-action="SubmitEClaim" method="post" enctype="multipart/form-data">

                @* Anti-Forgery Token is crucial for security *@
                @Html.AntiForgeryToken()

                <h5 class="mb-4">Submit New Claim</h5>

                
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Amount" class="form-label">Amount (RM)</label>
                        <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="e.g., 150.75" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DateOfExpense" class="form-label">Date of Expense</label>
                        <input asp-for="DateOfExpense" class="form-control" type="date" />
                        <span asp-validation-for="DateOfExpense" class="text-danger"></span>
                    </div>
                </div>

                
                <div class="mb-4">
                    <label for="ClaimDetails" class="form-label">Detailed Reason</label>
                    
                    <textarea asp-for="Description" id="ClaimDetails" class="form-control" rows="4" placeholder="Briefly describe the purpose of this expense..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                
                <div class="mb-5">
                    <label asp-for="DocumentFile" class="form-label">Upload Proof (Receipt/Invoice)</label>
                    <input asp-for="DocumentFile" class="form-control" type="file" accept="image/*,.pdf" />
                    <span asp-validation-for="DocumentFile" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary shadow-sm" style="background-color: #6a5acd; border-color: #6a5acd;">
                        Submit Claim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>