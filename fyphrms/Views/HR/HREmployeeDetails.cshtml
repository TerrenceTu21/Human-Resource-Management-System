@model fyphrms.Models.HR.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Employee Details - " + Model.FullName;
    Layout = "_Layout";

}

<style>
    .container-fluid {
        padding-left: 20px;
        padding-right: 20px;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
    }

    .card-header h4 {
        font-weight: 600;
    }

    hr {
        border-top: 1px solid #e0e0e0;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
    }

    h5.text-primary {
        border-bottom: 2px solid #007bff; 
        padding-bottom: 5px;
        margin-bottom: 20px;
        font-weight: 500;
        color: #007bff !important; 
    }

    .detail-row {
        display: flex; 
        margin-bottom: 8px;
        font-size: 1rem;
        color: #333;
    }

    .detail-label {
        font-weight: 600;
        color: #555;
        width: 180px; 
        flex-shrink: 0;
        text-align: left; 
    }

    .detail-value {
        flex-grow: 1; 
        font-weight: 400;
    }

    .profile-img-wrapper {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .profile-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #fff;
        box-shadow: 0 0 0 2px #007bff; 
    }

    .profile-icon-fallback {
        font-size: 100px;
        color: #adb5bd; 
        border-radius: 50%;
        border: 4px solid #fff;
        line-height: 100px; 
    }

    .badge {
        font-size: 0.85em;
        padding: 0.4em 0.8em;
        border-radius: 5px;
        font-weight: 600;
    }

        .badge.bg-secondary {
            background-color: #6c757d !important;
        }

        .badge.bg-success {
            background-color: #28a745 !important;
        }

        .badge.bg-info {
            background-color: #17a2b8 !important;
        }

</style>



<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-info shadow-info border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center">
                        <h4 class="text-black text-capitalize ps-3 mb-0">
                            @Model.FullName's Profile
                        </h4>
                        <a asp-controller="HR" asp-action="HREmployee" class="btn btn-light me-3 mb-0">
                            <i class="fas fa-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body px-4 pb-4">

                    <div class="profile-img-wrapper">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                        {
                            <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="profile-img" />
                        }
                        else
                        {
                            <i class="fas fa-user-circle profile-icon-fallback" aria-hidden="true"></i>
                        }
                    </div>

                    <h5 class="text-primary mt-3 mb-3">Personal Information</h5>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="detail-row">
                                <span class="detail-label">Employee ID</span>
                                <span class="detail-value">: @Model.EmployeeID</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">System User ID</span>
                                <span class="detail-value"><span>: </span><span class="badge bg-secondary">@Model.UserID</span></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">IC/ID Number</span>
                                <span class="detail-value">: @Model.ICNumber</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Email</span>
                                <span class="detail-value">: @Model.Email</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Contact Number</span>
                                <span class="detail-value">: @Model.ContactNumber</span>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="detail-row">
                                <span class="detail-label">Gender</span>
                                <span class="detail-value">: @Model.Gender</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Date of Birth</span>
                                <span class="detail-value">: @Model.DateOfBirth.ToString("yyyy-MM-dd")</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Address</span>
                                <span class="detail-value">: @Model.Address</span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h5 class="text-primary mt-3 mb-3">Employment Details</h5>
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="detail-row">
                                <span class="detail-label">Department</span>
                                <span class="detail-value"><span>: </span><span class="badge bg-success">@Model.DepartmentName</span></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Position</span>
                                <span class="detail-value"><span>: </span><span class="badge bg-info">@Model.PositionTitle</span></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Employment Type</span>
                                <span class="detail-value">: @Model.EmploymentType</span>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="detail-row">
                                <span class="detail-label">Join Date</span>
                                <span class="detail-value">: @Model.JoinDate.ToString("yyyy-MM-dd")</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Basic Salary</span>
                                <span class="detail-value">: @Model.BasicSalary.ToString("C")</span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-start">
                        <a asp-controller="HR"
                           asp-action="HREditEmployee"
                           asp-route-id="@Model.EmployeeID"
                           class="btn btn-warning me-3">
                            <i class="fas fa-edit me-2"></i> Edit Employee Details
                        </a>

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                            <i class="fas fa-key me-2"></i> Change Password
                        </button>
                    </div>

                </div>

                <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="HRChangeEmployeePassword" method="post">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="changePasswordModalLabel">Change Password for @Model.FullName</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="employeeId" value="@Model.EmployeeID" />

                                    <div class="mb-3">
                                        <label for="newPassword" class="form-label">New Password</label>
                                        <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" />
                                    </div>

                                    <div class="mb-3">
                                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" />
                                    </div>

                                    <div id="passwordError" class="text-danger" style="display:none;">Passwords do not match.</div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger" onclick="return validatePassword()">Change Password</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function validatePassword() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            if (newPassword !== confirmPassword) {
                document.getElementById('passwordError').style.display = 'block';
                return false; 
            }
            return true;
        }

        const changePasswordModal = document.getElementById('changePasswordModal');
        changePasswordModal.addEventListener('show.bs.modal', () => {
            document.getElementById('passwordError').style.display = 'none';
            document.getElementById('newPassword').value = '';
            document.getElementById('confirmPassword').value = '';
        });
    </script>
}
