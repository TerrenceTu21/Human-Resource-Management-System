@model IEnumerable<fyphrms.Models.Holiday>
@{
    ViewData["Title"] = "All Holidays";
    Layout = "_Layout";
}

<h2>All Holidays</h2>

<a asp-action="Index" asp-controller="HR" class="btn btn-secondary mb-3">Back to Dashboard</a>

<form asp-action="AddHoliday" method="post" class="row g-3 mb-4">
    @Html.AntiForgeryToken()
    <div class="col-md-5">
        <input type="text" name="Name" class="form-control" placeholder="Holiday Name" required />
    </div>
    <div class="col-md-4">
        <input type="date" name="Date" class="form-control" required />
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-success w-100">Add Holiday</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var holiday in Model)
        {
            <tr>
                <td>@holiday.Name</td>
                <td>@holiday.Date.ToString("dd MMMM yyyy")</td>
                <td>@holiday.Date.ToString("dddd")</td>
                <td>
                    <a asp-action="HREditHoliday" asp-controller="HR" asp-route-id="@holiday.HolidayID" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="DeleteHoliday" asp-controller="HR" asp-route-id="@holiday.HolidayID" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this holiday?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
