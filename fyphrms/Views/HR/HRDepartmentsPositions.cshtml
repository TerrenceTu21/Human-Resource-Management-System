@model fyphrms.Models.HR.DepartmentsPositionsPageViewModel
@{
    ViewData["Title"] = "Departments & Positions";
    Layout = "_Layout";
}

<style>
    .accordion-button {
        font-weight: 600;
    }

    .positions-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .positions-table th, .positions-table td {
            border: 1px solid #dee2e6;
            padding: 8px 12px;
        }

        .positions-table th {
            background-color: #f8f9fa;
            text-align: left;
        }

        .positions-table td {
            vertical-align: middle;
        }

    .accordion-item {
        margin-bottom: 15px;
    }

    .positions-table tbody tr:hover {
        background-color: #f1f3f5;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Departments & Positions</h3>
        <div>
            <a asp-controller="HR" asp-action="HREmployee" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Back to Employees
            </a>
            <a asp-controller="HR" asp-action="HRAddDepartment" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Add Department
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model.Departments == null || !Model.Departments.Any())
    {
        <div class="alert alert-info">No departments found.</div>
    }
    else
    {
        <div class="accordion" id="deptAccordion">
            @for (int i = 0; i < Model.Departments.Count; i++)
            {
                var dept = Model.Departments[i];
                var collapseId = $"collapseDept{dept.DepartmentID}";
                var headerId = $"headingDept{dept.DepartmentID}";

                <div class="accordion-item mb-2">
                    <h2 class="accordion-header" id="@headerId">
                        <button class="accordion-button collapsed"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#@collapseId"
                                aria-expanded="false"
                                aria-controls="@collapseId">
                            <strong>@dept.DepartmentName</strong>
                            <span class="badge bg-secondary ms-2">@dept.Positions.Count Positions</span>
                        </button>
                    </h2>

                    <div id="@collapseId"
                         class="accordion-collapse collapse"
                         aria-labelledby="@headerId"
                         data-bs-parent="#deptAccordion">

                        <div class="accordion-body">
                            @if (dept.Positions == null || !dept.Positions.Any())
                            {
                                <div class="text-muted mb-2">No positions available for this department.</div>
                            }
                            else
                            {
                                <table class="positions-table table-sm bg-white">
                                    <thead>
                                        <tr>
                                            <th style="width:80px">ID</th>
                                            <th>Position Title</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var pos in dept.Positions)
                                        {
                                            <tr>
                                                <td>@pos.PositionID</td>
                                                <td>@pos.PositionTitle</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }

                            <form asp-action="HRAddPosition" method="post" class="mt-3">
                                <div class="input-group">
                                    <input type="hidden" name="departmentId" value="@dept.DepartmentID" />
                                    <input type="text"
                                           name="positionTitle"
                                           class="form-control"
                                           placeholder="Enter new position title..."
                                           required />
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-plus me-1"></i> Add Position
                                    </button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
